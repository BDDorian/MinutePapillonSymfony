{% extends 'base.html.twig' %}

{% block body %}
<h1>Welcome to Minute Papillon !</h1>
<div class="container">
    <div class="row">
        <p><i> A To Do List Application ! </i></p>
    </div>
    <div class="row">    
        <h3> To register, click here ! </h3>  
    </div> 
    <div class="row">
        <form action="{{path('registration')}}">
            <button type="submit" class="btn btn-primary">Create an account</button>
        </form> 
    </div>
    <div class="row">   
        <h3>Already a member ?</h3>
    </div>
    <div class="row">    
        <form action="{{path('security_connexion')}}">
            <button type="submit" class="btn btn-success" >Log to your account</button>
        </form>  
    </div>
</div>
{% endblock %}